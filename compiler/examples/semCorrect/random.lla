let main : unit =
  print_string "Give n: ";
  let n : int = read_int () in
  print_string "Give k: ";
  let k : int = read_int () in
  let mutable sum : float
  and mutable seed : int in
  sum := 0.0;
  seed := 65;
  for i = 1 to
    k do
    seed := (!seed * 137 + 220 + i) mod n;
    sum := !sum +. float_of_int !seed
  done;
  if k > 0 then
    (print_string "Mean: ";
     print_float (!sum /. float_of_int k);
     print_string "\n")